---
# YAML Lint Configuration for GitHub Actions
# Suppresses expected warnings for environments and secrets

extends: default

rules:
  line-length:
    max: 120
    level: warning
  
  comments:
    min-spaces-from-content: 1
  
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
  
  # Allow single quotes or no quotes for environment names
  quoted-strings:
    quote-type: any
    required: false

ignore: |
  node_modules/
  dist/
  build/
  .venv/

